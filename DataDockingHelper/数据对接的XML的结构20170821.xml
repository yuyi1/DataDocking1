    <!--1.字段类型开始-->
    <Fields>
      <!--1.1 字段的集合-->
      <Field type="string">A0184</Field>
      <Field type="int">A0101</Field>
    </Fields>
    <!--1.字段类型结束-->

    <!--2.配置文件开始-->
    <Config>
      <FieldOrder>A0184|A0101</FieldOrder>
